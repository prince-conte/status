.services
    padding-top 40px
    h2
        margin-bottom 40px
        text-align center
        
        
    &__grid
        float left
        width 100%
        bgP(top,center,cover)
        background url(IMG_SRC-G/ssbg.jpg)
        padding 45px 0 15px
        
        .content
            text-align center
        
        
    &__item
        display inline-block
        width 24%
        height 250px
        margin-bottom 35px
        
        @media screen and (min-width: 600px) and (max-width: 999px)
            width 49%
               
        @media screen and (min-width: 300px) and (max-width: 599px)
            width 100%
        
        
    &__elips
        display table
        size(180px,180px)
        background colfirm
        position relative
        margin 0 auto
        border-radius 50%
        margin-bottom 22px
        
        img
            position relative
            display block
            margin 0 auto
            
    &__title
        font-size 18px
        font-weight 400
        text-align center
        line-height 21px
        float left
        width 100%
        
        