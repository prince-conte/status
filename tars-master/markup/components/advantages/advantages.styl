.advantages
    padding 40px 0 50px
    
    h3
        margin-bottom 30px
        text-align center
        
    &__grid
        clearfix()
        
    &__row
        float left
        display inline-block
        padding 0 15px 0px
        

        
    &__row--one
        width 275px + 30
            
    &__row--two
        width 375px + 30
                 
    &__row--three
        width 460px + 30
        
        
        
    &__article
        float left
        width 100%
        margin-bottom 30px
        
    &__article--number
        font-size 24px
        font-weight 700
        
    &_img
        width 100%
        height auto
        float left
        bgP(top,center,cover)
        
        
    &_img__1
        height 270px
             
    &_img__2
        height 170px
                    
    &_img__3
        height 160px
                         
    &_img__4
        height 301px
                                 
    &_img__5
        height 270px
                            
    &_img__6
        height 170px
        
    
    
    &_description
        float left
        width 100%
        padding 20px
        color #fff
        font-size 16px
        background colfirm
        line-height 21px