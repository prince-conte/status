.advantages
    padding 40px 0 50px
    
    h3
        margin-bottom 30px
        text-align center 
        
    &__grid
        clearfix()
        
    &__row
        float left
        display inline-block
        padding 0 15px 0px
        @media screen and (min-width: 300px) and (max-width: 1199px)
            width 100% !important
            padding 0 0px
        

        
    &__row--one
        width 275px + 30
            
    &__row--two
        width 375px + 30
                 
    &__row--three
        width 460px + 30 

        
        
        
    &__article
        float left
        width 100%
        margin-bottom 30px
        @media screen and (min-width: 300px) and (max-width: 1199px)
           width 50%
           padding 0 15px 0px
           
        @media screen and (min-width: 600px) and (max-width: 999px)
           width 100%
           padding 0 15px 0px
               
        @media screen and (min-width: 300px) and (max-width: 599px)
           width 100%
           padding 0 0px 0px
    
        
    &__article--number
        font-size 24px
        font-weight 700
        @media screen and (min-width: 300px) and (max-width: 1199px)
            display none
        
        
    &_img
        width 100%
        height auto
        float left
        bgP(top,center,cover)
        @media screen and (min-width: 300px) and (max-width: 1199px)
            height 170px !important
        @media screen and (min-width: 300px) and (max-width: 1199px)
            height 230px !important
        
        
    &_img__1
        height 270px
             
    &_img__2
        height 170px
                    
    &_img__3
        height 160px
                         
    &_img__4
        height 301px
                                 
    &_img__5
        height 270px
                            
    &_img__6
        height 170px
        
    
    
    &_description
        float left
        width 100%
        padding 20px
        color #fff
        font-size 16px
        background colfirm
        line-height 21px
        @media screen and (min-width: 900px) and (max-width: 1199px)
            height 106px
            
        @media screen and (min-width: 300px) and (max-width: 899px)
            height auto
    