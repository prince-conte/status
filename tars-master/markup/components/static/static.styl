.static
    background #2f2a2a
    min-height 450px
    position relative
    
        
    
    &:before
        content '';
        position absolute
        display block
        width 100%
        height 13px
        background-repeat repeat-x
        background-image url(IMG_SRC-G/yap.png)
        bottom 0px
        left 0px
        
        
    .content
        padding 40px 0
        @media screen and (min-width: 300px) and (max-width: 999px)
            padding 40px 25px
            
    
    .content:before
        content '';
        position absolute
        height 7px
        width 100%
        left:0px
        top 265px
        bgP(center,center,contain)
        background url(IMG_SRC-G/line.png)
        @media screen and (min-width: 300px) and (max-width: 1199px)
            display none
        
    
    h3
        text-align center
        color #fff
        margin-bottom 20px
    
    
    &_bg
        abs(block,100%,100%,0,0)
        bgP(top,center,cover)
        background url(IMG_SRC-G/sbg.jpg)
        opacity 0.07
        
        
    &_desc
        text-align center
        margin-bottom 50px
        font-weight 500
        color #fff
        margin-bottom 45px
        
        
    &__grid
        
        
    &__item
        float left
        width 20%
        @media screen and (min-width: 1000px) and (max-width: 1199px)
            width 33.33333% !important
            height 190px
            padding-left 20px
            margin-bottom 35px
            
        @media screen and (min-width: 600px) and (max-width: 999px)
            width 50% !important
            
                       
        @media screen and (min-width: 300px) and (max-width: 999px)
            width 100% !important
            margin 25px 0 45px
            padding 0 25px
        
            
            
        
    &_title
        float-w(100%)
        margin-bottom 35px
        @media screen and (min-width: 300px) and (max-width: 999px)
            margin-bottom 20px
        
        img
            display inline-block
            
        
    &_s1
            width 238px
          
    &_s2
            width 269px
          
    &_s3
            width 213px
          
    &_s4
            width 250px
          
    &_s5
            width 230px
            
    
            
    &_info
        float-w(100%)
        padding-right 70px
        font-size 17px
        line-height 19px
        color #fff





        
        
    