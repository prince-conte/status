.slide
    position relative
    margin-bottom 120px
    
    img
        width 100%
        height auto
        display block
        
        
    &__info
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.19);
        position: absolute;
        left: 50%;
        margin-left -540px
        top: 100%;
        width: 1080px;
        height: 86px;
        z-index: 188;
        
        article
            float left
            width 100%
            height inherit
            padding 14px
            
            p
                font-size 24px
                text-align center
                margin 0px
                line-height 10px
                b
                    font-weight 700
                    line-height 30px

